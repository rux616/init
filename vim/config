prereq vim
prereq python3
prereq pip3
prereq curl
prereq pyvenv

minver python3 --version 3.6.0 type2

backup {{home_dir}}/.vimrc
backup {{home_dir}}/.vim/bundle/Vundle.vim

submodule {{config_dir}}/vundle

directory {{home_dir}}/.vim/bundle

link {{config_dir}}/.vimrc {{home_dir}}/.vimrc
link {{config_dir}}/vundle/ {{home_dir}}/.vim/bundle/Vundle.vim

postcmd vim +PluginInstall +qall
