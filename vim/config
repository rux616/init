prereq python3
prereq pip3

backup ${home_dir}/.vimrc
backup ${home_dir}/.vim/colors/badwolf.vim
backup ${home_dir}/.vim/bundle/black.vim

submodule ${config_dir}/badwolf
submodule $(config_dir}/black

directory ${home_dir}/.vim/colors
directory ${home_dir}/.vim/bundle

link ${config_dir}/.vimrc ${home_dir}/.vimrc
link ${config_dir}/badwolf/colors/badwolf.vim ${home_dir}/.vim/colors/badwolf.vim
link ${config_dir}/black/plugin/black.vim ${home_dir}/.vim/bundle/black.vim
